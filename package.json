{
  "name": "@garron/vite2-vue3-jsx",
  "version": "1.0.0",
  "description":"基于 vite2 vue3 jsx 开发前端基础项目模版",
  "author": {
    "name": "garron",
    "url": "https://github.com/geallenboy"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:geallenboy/vite2-vue3-jsx.git"
  },
  "homepage": "https://github.com/geallenboy/vite2-vue3-jsx",
  "keywords": [
    "vue",
    "vite2",
    "ant-design-vue",
    "vue3",
    "ts",
    "tsx",
    "pinia",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "serve": "npm run dev",
    "start": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "deploy": "gh-pages -d dist",
    "lint:eslint": "eslint --cache --max-warnings 0 \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:lint-staged": "lint-staged",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,ts}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\"",
    "prepare": "husky install",
    "test:gzip": "npx http-server dist --cors --gzip -c-1",
    "test:br": "npx http-server dist --cors --brotli -c-1"
  },
  "dependencies": {
    "@vueuse/core": "^7.6.2",
    "axios": "^0.26.0",
    "core-js": "^3.21.1",
    "dayjs": "^1.10.7",
    "qs": "^6.10.3",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@garron/standard": "^1.4.1",
    "@types/node": "^17.0.18",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitejs/plugin-legacy": "^1.7.1",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vitejs/plugin-vue-jsx": "^1.3.7",
    "@vue/compiler-sfc": "^3.2.31",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.2.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "lint-staged": "^12.3.4",
    "mockjs": "^1.1.0",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.1",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "vite-plugin-html": "^3.1.0",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-style-import": "^1.4.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-windicss": "^1.8.3",
    "vue-eslint-parser": "^8.2.0"
  },

  "engines": {
    "node": "^12 || >=14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "target": "web"
}
